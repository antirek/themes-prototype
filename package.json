{
  "name": "@thepro/cards",
  "version": "1.0.0",
  "type": "module",
  "description": "Vue framework for customizable card components with theme system",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    },
    "./style.css": "./dist/style.css",
    "./themes/light.css": "./dist/themes/light.css",
    "./themes/dark.css": "./dist/themes/dark.css",
    "./themes/green.css": "./dist/themes/green.css",
    "./themes/starwars.css": "./dist/themes/starwars.css"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "vue3",
    "typescript",
    "scss",
    "themes",
    "cards",
    "components",
    "ui",
    "framework"
  ],
  "author": "ThePro Team",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:themes": "vite build --config vite.themes.config.ts",
    "build:all": "npm run build:lib && npm run build:themes",
    "preview": "vite preview",
    "validate-themes": "tsx scripts/validate-themes.ts",
    "prepublishOnly": "npm run validate-themes && npm run build:all",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-onboarding": "^9.1.3",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/vue3-vite": "^9.1.3",
    "@types/node": "^24.3.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.4.0",
    "glob": "^10.3.10",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "sass-embedded": "^1.91.0",
    "storybook": "^9.1.3",
    "tsx": "^4.6.2",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "vitest": "^3.2.4",
    "vue": "^3.4.0",
    "vue-tsc": "^1.8.5"
  },
  "dependencies": {
    "@fontsource/cascadia-code": "^5.2.2",
    "@fontsource/fira-code": "^5.2.6",
    "@fontsource/inter": "^5.2.6",
    "@fontsource/jetbrains-mono": "^5.2.6",
    "@fontsource/nunito": "^5.2.6",
    "@fontsource/open-sans": "^5.2.6",
    "@fontsource/orbitron": "^5.2.6",
    "@fontsource/poppins": "^5.2.6",
    "@fontsource/rajdhani": "^5.2.6",
    "@fontsource/roboto": "^5.2.6",
    "@fontsource/source-sans-pro": "^5.2.5"
  }
}
