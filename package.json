{
  "name": "@thepro/cards",
  "version": "1.0.0",
  "type": "module",
  "description": "Vue framework for customizable card components with theme system",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "vue3",
    "typescript",
    "scss",
    "themes",
    "cards",
    "components",
    "ui",
    "framework"
  ],
  "author": "ThePro Team",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.ts",
    "preview": "vite preview",
    "validate-themes": "tsx scripts/validate-themes.ts",
    "prepublishOnly": "npm run validate-themes && npm run build:lib"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.4.0",
    "glob": "^10.3.10",
    "sass-embedded": "^1.91.0",
    "tsx": "^4.6.2",
    "typescript": "^5.0.2",
    "vite": "^7.1.3",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.5"
  }
}
